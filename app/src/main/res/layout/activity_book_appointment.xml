            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
